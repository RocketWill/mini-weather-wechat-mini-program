/**index.wxss**/
page{
  height: 100%;
  width:100%;
  background-image: url("http://35.200.105.78/wxmini/sunny-bg.png"); 
  background-position: center top; /* Center the image */
  background-repeat: no-repeat; /* Do not repeat the image */
  background-size:cover;
}
.content{
  height: 100%;
  width:100%;
  display:flex;
  flex-direction:column;
  font-family: 微软雅黑, 宋体;
  box-sizing:border-box;
  padding:20px;
  color: #ffffff;
  font-size:15px;
}
.info{
  margin-top:50rpx;
  width:100%;
  border-radius: 10px;
  text-align: center;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
}
.temp{
  font-size: 3rem;
  text-align: center;
  padding-top:10px;
}
.weather{
  line-height: 22px;
  margin: 10px 0;
  padding: 0 10px;
  font-size: 0.8rem;
}

.prompt{
  padding:10px;
  font-size: 0.8rem;
}
.city{
  text-align: center;
  margin: 10px;
  font-size: 2rem;
  font-weight: 500;
}
.aqi{
  font-size: 1.2rem;
}
.forecast{
  width: 100%;
  display:flex;
  margin-top:100px;
  align-self:flex-end;
}
.next-day{
  width:30%;
  background-color:rgba(255,255,255,0.1);
  border-radius: 5px;
  text-align:center;
  margin: 0 6rpx;
  margin-top:-70px;
  padding-top:20px;
  padding-bottom:20px;
}
.detail{
  color: #ffffff !important;
  font-size:12px;
  line-height: 1.2rem;
}
.f-date{
  font-size: 1.1rem;
  margin-bottom: 10px;
  font-weight: 300;
}

.copyright{
  text-align: center;
  font-size: 0.8rem;
  margin-top:15px;
}